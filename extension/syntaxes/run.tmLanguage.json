{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Run",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#string"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#include"
        },
        {
            "include": "#languages"
        }

    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.fn.run",
                    "match": "\\b(fn)\\b"
                },
                {
                    "name": "keyword.cmd.run",
                    "match": "\\b(cmd)\\b"
                },
                {
                    "name": "keyword.include.run",
                    "match": "\\b(in)\\b"
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double.run",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.run",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.documentation",
                    "match": "#.*$"
                }
            ]
        },
        "include": {
            "patterns": [
                {
                    "name": "keyword.include.run",
                    "match": "\\bin\\b"
                }
            ]
        },
        "function": {
            "patterns": [
                {
                    "include": "#keywords"
                },
                {
                    "match": "(?<=fn|cmd)\\s+(.*)\\(\\s*((\\w+\\s*)*)\\)\\s*",
                    "captures": {
                        "1": { "name": "entity.name.function.run" },
                        "2": { "name": "variable.parameter.function.run" }
                    }
                }
            ]
        },
		"languages": {
			"patterns": [
                {
                    "name": "meta.interpolation.run",
                    "match": "\\$\\w+" 
                },
                {
                    "begin": "rs|rust",
                    "end": "(?<=})",
                    "beginCaptures": {
                        "0": { "name": "entity.name.class.run" }
                    },
                    "patterns": [
                        { "include": "#function" },
                        { "include": "source.rust" }
                    ]
                },
                {
                    "begin": "js|javascript",
                    "end": "(?<=})",
                    "beginCaptures": {
                        "0": { "name": "entity.name.class.run" }
                    },
                    "patterns": [
                        { "include": "#function" },
                        { "include": "source.js"}
                    ]
                },
                {
                    "begin": "py|python",
                    "end": "(?<=})",
                    "beginCaptures": {
                        "0": { "name": "entity.name.class.run" }
                    },
                    "patterns": [
                        { "include": "#function" },
                        { "include": "source.python" }
                    ]
                },
                {
                    "begin": "(?<=fn|cmd)|shell|sh|bash",
                    "end": "(?<=})",
                    "beginCaptures": {
                        "0": { "name": "entity.name.class.run" }
                    },
                    "patterns": [
                        { "include": "#function" },
                        { "include": "source.shell" }
                    ]
                }
			]
		}
    },
    "scopeName": "source.run"
}